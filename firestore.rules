rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function isOwner(authorId) { return isSignedIn() && request.auth.uid == authorId; }
    function isAdmin() { return isSignedIn() && request.auth.token.email == 'gurudharamsingh@gmail.com'; }

    // Posts collection: published posts are public read.
    match /posts/{postId} {
      allow read: if resource.data.published == true;

      // Authors can read their own drafts
      allow read: if resource.data.authorId == request.auth.uid;

      // Admin can create/update posts
      allow create, update: if isAdmin() && request.resource.data.authorId == request.auth.uid;

      // Admin can delete any post
      allow delete: if isAdmin();
    }

    // (Optional) drafts collection alternative if separated
    match /drafts/{draftId} {
      allow read, write: if isAdmin();
    }
  }
}
